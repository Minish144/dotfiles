ramp-signal-2 = " ‚ñÉ"
ramp-signal-3 = " ‚ñÖ"
ramp-signal-4 = " ‚ñÜ"
ramp-signal-5 = " ‚ñà"

; Only applies if <animation-packetloss> is used
